.sended {
    display: flex;
    height: 50px;
    align-items: center;
    justify-content: center;
    background-color: #368a36;
    color: #fff;
    font-weight: bold;
    font-size: 17px;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 10000;
    visibility: hidden;
    opacity: 0;
    transition: opacity .3s;

    &--active {
        visibility: visible;
        opacity: 1;
    }
}